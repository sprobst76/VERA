# ── Domains ──────────────────────────────────────────────────────────────────
# Basis-Domain (nur die TLD + SLD, ohne Subdomain)
DOMAIN=yourdomain.de

# Demo-Slug: Pfad-basierter Zugang zur Demo, z.B. vera.lab.yourdomain.de/demo-a3f9b2c1
# Taucht nicht in Certificate Transparency Logs auf (kein eigener Hostname).
# Zufälligen Slug generieren: openssl rand -hex 6  →  demo-a3f9b2c1
DEMO_SLUG=demo-XXXXXXXX

# ── Datenbank ─────────────────────────────────────────────────────────────────
# Generieren: openssl rand -hex 16
POSTGRES_PASSWORD=CHANGE_ME

# ── Sicherheit ────────────────────────────────────────────────────────────────
# Generieren: openssl rand -hex 32
SECRET_KEY=CHANGE_ME
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── App ───────────────────────────────────────────────────────────────────────
APP_ENV=production
DEBUG=false

# CORS – nur eine Domain (Demo läuft auf demselben Host via Pfad)
ALLOWED_ORIGINS=https://vera.lab.yourdomain.de

# ── Benachrichtigungen (optional) ─────────────────────────────────────────────
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=vera@yourdomain.de
TELEGRAM_BOT_TOKEN=

# Web Push / VAPID – Schlüssel generieren mit:
#   pip install pywebpush && python3 -c "
#   from py_vapid import Vapid; import base64
#   from cryptography.hazmat.primitives.serialization import Encoding, PrivateFormat, PublicFormat, NoEncryption
#   v = Vapid(); v.generate_keys()
#   print('PRIV:', base64.urlsafe_b64encode(v.private_key.private_bytes(Encoding.DER, PrivateFormat.PKCS8, NoEncryption())).rstrip(b'=').decode())
#   print('PUB:', base64.urlsafe_b64encode(v.public_key.public_bytes(Encoding.X962, PublicFormat.UncompressedPoint)).rstrip(b'=').decode())"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CLAIMS_SUB=mailto:admin@yourdomain.de

# ── Zeitzone ──────────────────────────────────────────────────────────────────
TZ=Europe/Berlin
